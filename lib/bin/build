#!/bin/bash -eu

source "$(dirname $0)/../lego.sh"

help() {
  cat << END
Usage:
    lego build IMAGE
    lego build DIST
    lego build DIST/IMAGE
END
}

usage() {
  help
  exit 1
}

build() {
  local build="$(cd "$(dirname "${BASH_SOURCE[0]}")"/../build; pwd)"

  cd "$build"

  if [[ $# = 0 ]]; then
    echo Build ALL
    make
    exit
  fi

  case "$1" in
    *help) help; exit;;
  esac

  if [ -d "$1" ]; then
    make -C "$1"
    exit
  fi

  if [ -d "alpine/$1" ]; then
    make -C alpine "$1"
    exit
  fi

  echo "$1 not found"
  usage
}

build "$@"
