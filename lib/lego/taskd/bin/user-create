#!/bin/sh -eux

source .env

docker-compose exec taskd taskd add org "$taskd_user_company"
docker-compose exec taskd taskd add user "$taskd_user_company" "$taskd_user_name" | tee -a user.log
uid=$(tail -2 user.log | grep "New user key:"  | cut -d\  -f4)

echo "$taskd_user_company/user/$uid" | tee -a user.config
