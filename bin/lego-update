#!/bin/bash -eu

source "$(dirname $0)/../lib/lego.sh"

help() {
  echo Usage: lego update
}

update_compose() {
  cat <<END > docker-compose.yml
version: "3"

END
}

update_services() {
  if [ -z "$(compgen -G 'legos/*/service.yml')" ]; then
    echo "No services found! use 'lego add'"
    exit 2
  fi

  echo -e "services:\n"        >> docker-compose.yml
  cat legos/*/service.yml >> docker-compose.yml
}

update_env() {
  rm -f .env
  if [ -n "$(compgen -G 'legos/*/.env')" ]; then
    cat legos/*/.env > .env
  fi
}

build() {
  if [ -n "$(compgen -G 'legos/*/build')" ]; then
    # TODO: build only used legos
    docker-compose build
  fi
}

update() {
  handle_help "$@"
  require_args lego-add 0 "$@"
  check_initialized

  update_compose
  update_services
  update_env
  build
}


update "$@"
